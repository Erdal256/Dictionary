@model Entities.Concrete.Category
@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yeni Kategori Ekleme Sayfası</h1>
<br />
@using (Html.BeginForm("AddCategory", "AdminCategory", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Kategori Adı")
        @Html.TextBoxFor(x => x.CetegoryName,new  { @class="form-control"})
        @Html.ValidationMessageFor(x => x.CetegoryName)
        <br /> <br />
        @Html.Label("Açıklamayı Yazınız")
        @Html.TextAreaFor(x => x.CetegoryDescription, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.CetegoryDescription)
        <br /> <br />
        <button class="btn btn-info">Kaydet</button>
    </div>
}

