@model Entities.Concrete.Message
@{
    ViewBag.Title = "NewMessage";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta karakter kümesi="utf-8">
    <meta http-equiv="X-UA-Uyumlu" content="IE=edge">
    <title>AdminLTE 3 | Mesaj Oluştur</title>
    <!-- Tarayıcıya ekran genişliğine duyarlı olmasını söyleyin -->
    <meta name="viewport" content="width=cihaz genişliği, ilk ölçek=1">
    <!-- Harika Yazı Tipi -->
    <!-- Tema stili -->
    <!-- yaz notu -->
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/plugins/summernote/summernote-bs4.css">

    <script src="~/AdminLTE-3.0.4/plugins/summernote/summernote.min.js"></script>
    <!-- Google Yazı Tipi: Kaynak Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">

    </head>
    <body class="tut-geçiş kenar çubuğu-mini">

        <!-- İçerik Başlığı (Sayfa başlığı) -->
        <bölüm class="content-header">
            <div class="konteyner-akışkan">
                <div class="satır mb-2">
                    <div class="col-sm-6">
                        <h1>Yeni Mesaj Sayfası</h1>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </bölüm>
        <!-- Ana içerik -->
        <bölüm class="içerik">
            <div class="konteyner-akışkan">
                <div class="row">
                    @Html.Action("MessagelistMenu", "WriterPanelMessage")
                    <!-- /.col -->
                    <div class="col-md-9">
                        @using (Html.BeginForm("NewMessage", "WriterPanelMessage", FormMethod.Post))
                        {
                            <div class="card card-primary card-outline">
                                <div class="card-header">
                                    <h3 class="card-title">Yeni Mesaj Oluştur</h3>
                                </div>
                                <!-- /.card-header -->
                                <div class="card-body">
                                    <div class="form-group">
                                        @Html.Label("Alıcı Adı")
                                        @Html.TextBoxFor(x => x.RecieverMail, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(x => x.RecieverMail)
                                    </div>
                                    <div class="form-group">
                                        @Html.Label("Konu")
                                        @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(x => x.Subject)
                                    </div>
                                    <div class="form-group">
                                        @Html.Label("Mesajınız")
                                        <textarea id="compose-textarea" name="MessageContent" class="form-control" style="height: 300px">
                    </textarea>
                                    </div>
                                    <div class="form-group">
                                        <div class="btn btn-default btn-file">
                                            <i class="fas fa-paperclip"></i> Dosya Ekle
                                            <input type="file" name="attachment">
                                        </div>
                                        <p class="help-block">Max. 32MB</p>
                                    </div>
                                </div>
                                <!-- /.card-body -->
                                <div class="card-footer">
                                    <div class="float-right">
                                        <button type="button" class="btn btn-default"><i class="fas fa-pencil-alt"></i> Taslaklara Kaydet</button>
                                        <button type="submit" class="btn btn-primary"><i class="far fa-envelope"></i> Gönder</button>
                                    </div>
                                    <button type="reset" class="btn btn-default"><i class="fas fa-times"></i> İptal Et</button>
                                </div>
                                <!-- /.card-footer -->
                            </div>
                        }
                        <!-- /.card -->
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->
            </div><!-- /.container-fluid -->
            </section>
            <!-- /.content -->
            <!-- /.content-wrapper -->
            <!-- Control Sidebar -->
            <!-- /.control-sidebar -->
            <!-- ./wrapper -->
            <!-- jQuery -->
            <script src="~/AdminLTE-3.0.4/plugins/jquery/jquery.min.js"></script>
            <!-- Önyükleme 4 -->
            <script src="~/AdminLTE-3.0.4/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
            <!-- AdminLTE Uygulaması -->
            <script src="~/AdminLTE-3.0.4/dist/js/adminlte.min.js"></script>
            <!-- Demo amaçlı AdminLTE -->
            <script src="~/AdminLTE-3.0.4/dist/js/demo.js"></script>
            <!-- Yaz Notu -->
            <script src="~/AdminLTE-3.0.4/plugins/summernote/summernote-bs4.min.js"></script>
            <!-- Sayfa Komut Dosyası -->
            <script>
                $(işlev() {
                    //Metin düzenleyici ekle
                    $('#compose-textarea').yaz notu()
                })
            </script>
    </body>
</html>

